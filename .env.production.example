# Production Environment Configuration for Inked Draw
# Copy this file to .env.production and fill in your production values

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# Analytics (PostHog)
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com

# AI Services for Content Moderation
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
AWS_REKOGNITION_ACCESS_KEY=your_aws_access_key_here
AWS_REKOGNITION_SECRET_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Content Moderation Configuration
MODERATION_AUTO_APPROVE_THRESHOLD=0.8
MODERATION_AUTO_REJECT_THRESHOLD=0.3
MODERATION_REQUIRE_REVIEW_THRESHOLD=0.6
MODERATION_MAX_POSTS_PER_HOUR=10
MODERATION_MAX_REPORTS_PER_DAY=20

# Real-time Features
WEBSOCKET_CORS_ORIGIN=https://yourdomain.com
WEBSOCKET_MAX_CONNECTIONS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@yourdomain.com

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS App Runner Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
APP_RUNNER_SERVICE_ARN=arn:aws:apprunner:us-east-1:123456789012:service/inked-draw-backend/abcdef123456

# Frontend Configuration
REACT_APP_API_URL=https://your-backend-domain.com
REACT_APP_SUPABASE_URL=https://[project-ref].supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here
REACT_APP_POSTHOG_API_KEY=your_posthog_api_key_here
REACT_APP_POSTHOG_HOST=https://app.posthog.com

# CDN and Static Assets
S3_BUCKET_NAME=inked-draw-static-assets
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Monitoring (Grafana)
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Domain Configuration
DOMAIN_NAME=yourdomain.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=inked-draw-backups

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=128

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
